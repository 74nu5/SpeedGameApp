	</ItemGroup>

	<ItemGroup>
		<None Include="..\.editorconfig" Link=".editorconfig" />
        <AdditionalFiles Include="..\stylecop.json" Link="stylecop.json" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SpeedGameApp.DataAccessLayer\SpeedGameApp.DataAccessLayer.csproj" />
	</ItemGroup>

