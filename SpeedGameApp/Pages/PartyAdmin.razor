@page "/party/{PartyId:guid}/admin"

@using SpeedGameApp.DataEnum
@using SpeedGameApp.Shared.Components
@inherits PartyPageBase
<PageTitle>Speed Game App - Party admin</PageTitle>

<ConfirmDialog
    IsVisible="@showDeleteTeamDialog"
    Title="Supprimer l'équipe"
    Message="@deleteTeamDialogMessage"
    ConfirmText="Supprimer"
    OnConfirm="ConfirmDeleteTeam"
    OnCancel="CancelDeleteTeam" />

@* Theme Selector Section *@
<div class="card mb-6 border-l-4 border-3b-yellow">
    <div class="card-header flex items-center justify-between">
        <div>
            <h3 class="text-2xl font-bold">Party: @(this.CurrentParty.Name)</h3>
            <p class="text-sm text-gray-500">ID: @(this.PartyId.ToString("D"))</p>
        </div>
        <button class="btn-danger px-4 py-2 rounded-lg" @onclick="@(() => this.PartyManagementService.SavePartyAsync(this.PartyId, CancellationToken.None))">
            <i class="bi bi-save mr-2"></i>Sauvegarder
        </button>
    </div>

    <div class="p-6 bg-3b-gray-light">
        <h4 class="font-bold text-lg mb-4 flex items-center">
            <i class="bi bi-palette-fill text-3b-yellow mr-2"></i>
            Thème visuel de la partie
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            @* 3bstudio Theme Card *@
            <div @onclick="@(() => this.ChangeTheme(PartyTheme.ThreeBStudio))"
                 class="cursor-pointer border-4 rounded-lg p-4 transition-all hover:shadow-large @(this.CurrentParty.Theme == PartyTheme.ThreeBStudio ? "border-3b-yellow bg-3b-yellow/10" : "border-gray-300 bg-white")">
                <div class="flex items-center justify-between mb-2">
                    <h5 class="font-bold text-lg">3bstudio</h5>
                    @if (this.CurrentParty.Theme == PartyTheme.ThreeBStudio)
                    {
                        <i class="bi bi-check-circle-fill text-3b-yellow text-2xl"></i>
                    }
                </div>
                <div class="h-20 rounded bg-gradient-to-r from-3b-blue to-3b-black mb-2"></div>
                <p class="text-sm text-gray-600">Professionnel, moderne, bleu/noir/jaune</p>
            </div>

            @* Cyberpunk 2077 Theme Card *@
            <div @onclick="@(() => this.ChangeTheme(PartyTheme.Cyberpunk2077))"
                 class="cursor-pointer border-4 rounded-lg p-4 transition-all hover:shadow-large @(this.CurrentParty.Theme == PartyTheme.Cyberpunk2077 ? "border-cp-cyan bg-cp-cyan/10" : "border-gray-300 bg-white")">
                <div class="flex items-center justify-between mb-2">
                    <h5 class="font-bold text-lg">Cyberpunk 2077</h5>
                    @if (this.CurrentParty.Theme == PartyTheme.Cyberpunk2077)
                    {
                        <i class="bi bi-check-circle-fill text-cp-cyan text-2xl"></i>
                    }
                </div>
                <div class="h-20 rounded bg-gradient-to-r from-cp-cyan via-cp-pink to-cp-yellow mb-2"></div>
                <p class="text-sm text-gray-600">Néon, futuriste, dystopique</p>
            </div>

            @* Default Theme Card *@
            <div @onclick="@(() => this.ChangeTheme(PartyTheme.Default))"
                 class="cursor-pointer border-4 rounded-lg p-4 transition-all hover:shadow-large @(this.CurrentParty.Theme == PartyTheme.Default ? "border-blue-500 bg-blue-50" : "border-gray-300 bg-white")">
                <div class="flex items-center justify-between mb-2">
                    <h5 class="font-bold text-lg">Par défaut</h5>
                    @if (this.CurrentParty.Theme == PartyTheme.Default)
                    {
                        <i class="bi bi-check-circle-fill text-blue-500 text-2xl"></i>
                    }
                </div>
                <div class="h-20 rounded bg-gradient-to-r from-blue-500 to-gray-800 mb-2"></div>
                <p class="text-sm text-gray-600">Thème standard</p>
            </div>
        </div>

        <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-500 rounded">
            <p class="text-sm text-blue-800">
                <i class="bi bi-info-circle-fill mr-2"></i>
                <strong>Astuce :</strong> Le thème s'applique uniquement aux pages de jeu des joueurs. L'interface admin reste sur le thème 3bstudio.
            </p>
        </div>
    </div>
</div>

<p class="mb-4">
    <a href="@(this.NavigationManager.ToAbsoluteUri($"/party/{this.PartyId}/team/new"))" target="_blank" class="text-3b-blue hover:text-3b-yellow underline font-semibold">
        <i class="bi bi-link-45deg"></i> Lien à partager aux joueurs
    </a>
</p>

@* Game Controls Section *@
<div class="card mb-6">
    <div class="card-header">
        <h4 class="text-xl font-bold flex items-center">
            <i class="bi bi-controller text-3b-yellow mr-2"></i>
            Contrôles du jeu
        </h4>
    </div>
    <div class="p-6 space-y-6">
        @* Show/Hide Themes Toggle *@
        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Affichage des thèmes</label>
            @if (!this.CurrentParty.ShowThemes)
            {
                <button class="btn-secondary px-6 py-2 rounded-lg inline-flex items-center" @onclick="this.ShowTheme">
                    <i class="bi bi-eye mr-2"></i>
                    Afficher les thèmes
                </button>
            }
            else
            {
                <button class="btn-secondary px-6 py-2 rounded-lg inline-flex items-center" @onclick="this.HideTheme">
                    <i class="bi bi-eye-slash mr-2"></i>
                    Cacher les thèmes
                </button>
            }
        </div>

        @* Response Type Selector *@
        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-3">Type de réponse</label>
            <div class="flex flex-wrap gap-3">
                <button
                    class="@GetResponseTypeButtonClass(ResponseType.None)"
                    @onclick="() => this.SetResponse(ResponseType.None)">
                    <i class="bi bi-dash-circle mr-2"></i>
                    Aucune
                </button>
                <button
                    class="@GetResponseTypeButtonClass(ResponseType.Buzzer)"
                    @onclick="() => this.SetResponse(ResponseType.Buzzer)">
                    <i class="bi bi-lightning-charge-fill mr-2"></i>
                    Buzzer
                </button>
                <button
                    class="@GetResponseTypeButtonClass(ResponseType.Proposition)"
                    @onclick="() => this.SetResponse(ResponseType.Proposition)">
                    <i class="bi bi-keyboard mr-2"></i>
                    Proposition rapidité
                </button>
                <button
                    class="@GetResponseTypeButtonClass(ResponseType.Qcm)"
                    @onclick="() => this.SetResponse(ResponseType.Qcm)"
                    disabled>
                    <i class="bi bi-list-check mr-2"></i>
                    QCM
                </button>
                <button
                    class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-all font-semibold inline-flex items-center"
                    @onclick="@(this.ResetQuestion)">
                    <i class="bi bi-arrow-counterclockwise mr-2"></i>
                    Reset
                </button>
            </div>
        </div>
    </div>
</div>

@* QCM Section *@
@if (this.CurrentParty.CurrentResponseType == ResponseType.Qcm)
{
    var currentPartyCurrentQcm = this.CurrentParty.CurrentQcm;

    <div class="card mb-6">
        <div class="card-header flex items-center justify-between">
            <h4 class="text-xl font-bold">Question QCM</h4>
            <button class="btn-primary px-4 py-2 rounded-lg inline-flex items-center" @onclick="this.RandomizeQcm">
                <i class="bi bi-shuffle mr-2"></i>
                Question aléatoire
            </button>
        </div>

        @if (currentPartyCurrentQcm is not null)
        {
            <div class="p-6">
                <div class="bg-3b-blue/5 border-l-4 border-3b-blue rounded-lg p-4 mb-4">
                    <p class="font-bold text-lg text-gray-900">@currentPartyCurrentQcm.Question</p>
                </div>
                <ol class="space-y-2 ml-6">
                    <li class="@(currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option1 ? "font-bold text-green-600" : "text-gray-700")">
                        @currentPartyCurrentQcm.Option1
                        @if (currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option1)
                        {
                            <i class="bi bi-check-circle-fill text-green-600 ml-2"></i>
                        }
                    </li>
                    <li class="@(currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option2 ? "font-bold text-green-600" : "text-gray-700")">
                        @currentPartyCurrentQcm.Option2
                        @if (currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option2)
                        {
                            <i class="bi bi-check-circle-fill text-green-600 ml-2"></i>
                        }
                    </li>
                    <li class="@(currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option3 ? "font-bold text-green-600" : "text-gray-700")">
                        @currentPartyCurrentQcm.Option3
                        @if (currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option3)
                        {
                            <i class="bi bi-check-circle-fill text-green-600 ml-2"></i>
                        }
                    </li>
                    <li class="@(currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option4 ? "font-bold text-green-600" : "text-gray-700")">
                        @currentPartyCurrentQcm.Option4
                        @if (currentPartyCurrentQcm.Response == currentPartyCurrentQcm.Option4)
                        {
                            <i class="bi bi-check-circle-fill text-green-600 ml-2"></i>
                        }
                    </li>
                </ol>
            </div>
        }
    </div>
}

@* Teams Section *@
<div class="mb-6">
    <h4 class="text-2xl font-bold mb-4 flex items-center">
        <i class="bi bi-people-fill text-3b-yellow mr-2"></i>
        Liste des équipes de la partie
    </h4>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var (_, team) in this.CurrentParty.Teams)
        {
            <div class="card @(team.Answered ? "border-green-400 bg-green-50" : "")">
                <div class="card-header flex items-center justify-between">
                    <a class="text-xl font-bold text-3b-blue hover:text-3b-yellow transition-colors" target="_blank" href="@($"/party/{this.PartyId}/team/{team.Id}/play")">
                        <i class="bi bi-box-arrow-up-right mr-1 text-sm"></i>
                        @team.Name
                    </a>
                    <button class="px-3 py-1 bg-red-500 text-white text-sm rounded hover:bg-red-600 transition-colors" @onclick="() => this.ShowDeleteTeamDialog(team.Id, team.Name)">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                <div class="p-4">
                    @* Score Display *@
                    <div class="text-center mb-4 p-4 bg-gray-100 rounded-lg">
                        <p class="text-sm font-semibold text-gray-600 mb-1">Score</p>
                        <p class="text-4xl font-black @(team.Score < 0 ? "text-red-600" : "text-green-600")">
                            @team.Score
                        </p>
                    </div>

                    @* Points Adjustment Buttons *@
                    <div class="flex gap-3 mb-4">
                        <div class="flex flex-col gap-2 flex-1">
                            <button class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, -100)">
                                -100
                            </button>
                            <button class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, -10)">
                                -10
                            </button>
                            <button class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, -1)">
                                -1
                            </button>
                        </div>
                        <div class="flex flex-col gap-2 flex-1">
                            <button class="px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, 1)">
                                +1
                            </button>
                            <button class="px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, 10)">
                                +10
                            </button>
                            <button class="px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-all font-bold text-sm" @onclick="async () => await this.AddPointsAsync(team, 100)">
                                +100
                            </button>
                        </div>
                    </div>

                    @* Team Response *@
                    @if (!string.IsNullOrWhiteSpace(team.Response))
                    {
                        <div class="border-t pt-3">
                            @switch (team.QcmValidResponse)
                            {
                                case true:
                                    <div class="flex items-center text-green-600 font-semibold mb-2">
                                        <i class="bi bi-check-circle-fill mr-2"></i>
                                        Bonne réponse
                                    </div>
                                    break;
                                case false:
                                    <div class="flex items-center text-red-600 font-semibold mb-2">
                                        <i class="bi bi-x-circle-fill mr-2"></i>
                                        Mauvaise réponse
                                    </div>
                                    break;
                                case null:
                                    break;
                            }
                            <p class="text-sm text-gray-700">
                                <span class="font-semibold">Réponse :</span> @team.Response
                            </p>
                        </div>
                    }

                    @* Theme Link *@
                    <div class="mt-3 pt-3 border-t">
                        <a href="@(this.NavigationManager.ToAbsoluteUri($"/party/{this.PartyId}/themes/{team.Id}"))"
                           target="_blank"
                           class="text-xs text-3b-blue hover:text-3b-yellow underline inline-flex items-center">
                            <i class="bi bi-link-45deg mr-1"></i>
                            Lien choix thèmes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (this.CurrentParty.ShowThemes)
{
    <div class="container">
        <h1>Thèmes de musique pour un blind test</h1>
        <div class="row row-cols-1 row-cols-md-6 g-4">
            @{
                var index = 0;
            }
            @foreach (var theme in this.CurrentParty.RandomThemes)
            {
                index++;
                <div class="cursor-pointer col">
                    <div class="@(this.GetCardCss(theme))">
                        <div class="card-body">
                            <h5 class="card-title">@index</h5>
                            @if (theme.AlreadyTaken)
                            {
                                <p>@theme.Name</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}