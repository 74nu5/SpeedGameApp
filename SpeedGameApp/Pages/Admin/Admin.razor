@page "/admin"
@inherits GamePageBase
@using SpeedGameApp.Shared.Components
<PageTitle>Speed Game App - Admin</PageTitle>

<ConfirmDialog
    IsVisible="@showDeleteDialog"
    Title="Supprimer la partie"
    Message="@deleteDialogMessage"
    ConfirmText="Supprimer"
    OnConfirm="ConfirmDelete"
    OnCancel="CancelDelete" />

<ConfirmDialog
    IsVisible="@showDeleteAllDialog"
    Title="Supprimer toutes les parties"
    Message="Voulez-vous vraiment supprimer toutes les parties ? Cette action est irréversible."
    ConfirmText="Tout supprimer"
    OnConfirm="ConfirmDeleteAll"
    OnCancel="CancelDeleteAll" />

<h3>Admin</h3>
<h4>Parties en cours</h4>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Party name</th>
        <th>Urls</th>
        <th>Teams</th>
        <th>
            <button class="btn btn-danger" @onclick="this.ShowDeleteAllDialog">Supprimer tout</button>
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var (id, (_, name, teams)) in this.PartyManagementService.Parties)
    {
        <tr>
            <td>@id.ToString("D")</td>
            <td>@name</td>
            <td>
                    <p><a href="@this.NavigationManager.ToAbsoluteUri($"/party/{id}/admin")">Admin</a></p>
            </td>
            <td>
                <ol>
                    @foreach (var (_ , team) in teams.OrderByDescending(pair => pair.Value.Score))
                    {
                            <li>@team.Name : @team.Score (@team.Players.Count joueurs) (<a href="@this.NavigationManager.ToAbsoluteUri($"/party/{id}/team/{team.Id}/play")">Lien</a>)</li>
                    }
                </ol>
            </td>
            <td>
                <button class="btn btn-danger" @onclick="() => this.ShowDeleteDialog(id, name, false)">Supprimer</button>
                <button class="btn btn-success" @onclick="() => this.SavePartyAsync(id)">Sauvegarder</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<h4>Parties sauvegardées</h4>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Party name</th>
        <th>Urls</th>
        <th>Teams</th>
        <th>
            <button class="btn btn-danger" @onclick="this.ShowDeleteAllDialog">Supprimer tout</button>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var (id, (_, name, teams)) in this.dbParties)
    {
        <tr>
            <td>@id.ToString("D")</td>
            <td>@name</td>
            <td>
                <p><a href="@this.NavigationManager.ToAbsoluteUri($"/party/{id}/admin")">Admin</a></p>
            </td>
            <td>
                <ol>
                    @foreach (var (_ , team) in teams.OrderByDescending(pair => pair.Value.Score))
                    {
                        <li>@team.Name : @team.Score (@team.Players.Count joueurs) (<a href="@this.NavigationManager.ToAbsoluteUri($"/party/{id}/team/{team.Id}/play")">Lien</a>)</li>
                    }
                </ol>
            </td>
            <td>
                <button class="btn btn-danger" @onclick="() => this.ShowDeleteDialog(id, name, true)">Supprimer de la base</button>
                <button class="btn btn-success" @onclick="() => this.LoadPartyAsync(id)">Charger la partie</button>
            </td>
        </tr>
    }
    </tbody>
</table>

