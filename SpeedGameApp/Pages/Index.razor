@page "/"
@using SpeedGameApp.Shared.DesignSystem.Components.Buttons
@using SpeedGameApp.Shared.DesignSystem.Components.Cards

<PageTitle>Speed Game App - Accueil</PageTitle>

@* Hero Section *@
<div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-3b-blue mb-4">
            Bienvenue sur <span class="text-3b-yellow">SpeedGameApp</span>
        </h1>
        <p class="text-xl text-gray-600">
            Créez votre partie de quiz et amusez-vous avec vos amis !
        </p>
    </div>

    @* Error Message *@
    @if (!string.IsNullOrEmpty(this.errorMessage))
    {
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg flex items-start justify-between shadow-md" role="alert">
            <div class="flex items-start">
                <i class="bi bi-exclamation-triangle-fill text-2xl mr-3"></i>
                <div>
                    <p class="font-bold">Erreur</p>
                    <p class="text-sm">@this.errorMessage</p>
                </div>
            </div>
            <button type="button" @onclick="this.ClearError" class="text-red-700 hover:text-red-900 transition-colors">
                <i class="bi bi-x-lg text-xl"></i>
            </button>
        </div>
    }

    @* Party Creation Form *@
    <Card Header="Créer une nouvelle partie" Hoverable="true" AdditionalClasses="max-w-2xl mx-auto">
        <EditForm Model="this.partyName" class="space-y-6">
            <div>
                <label for="party-name" class="block text-sm font-semibold text-gray-700 mb-2">
                    Nom de la partie
                </label>
                <InputText
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-3b-blue focus:ring-2 focus:ring-3b-blue-light outline-none transition-all text-gray-900"
                    placeholder="Entrez un nom pour votre partie..."
                    type="text"
                    id="party-name"
                    @bind-Value="this.partyName"/>
            </div>

            <div class="flex justify-center">
                <Button
                    Variant="primary"
                    Size="lg"
                    OnClick="@this.CreatePartyAsync"
                    Type="submit"
                    AdditionalClasses="w-full sm:w-auto">
                    <i class="bi bi-plus-circle mr-2"></i>
                    Créer la partie
                </Button>
            </div>
        </EditForm>
    </Card>

    @* Info Cards *@
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <Card Hoverable="true">
            <div class="text-center">
                <div class="w-16 h-16 bg-3b-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-people-fill text-3xl text-3b-blue"></i>
                </div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">Multi-joueurs</h3>
                <p class="text-sm text-gray-600">Jouez avec plusieurs équipes en temps réel</p>
            </div>
        </Card>

        <Card Hoverable="true">
            <div class="text-center">
                <div class="w-16 h-16 bg-3b-yellow/20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-lightning-fill text-3xl text-3b-yellow-dark"></i>
                </div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">Rapide & Fun</h3>
                <p class="text-sm text-gray-600">Buzzers, QCM et défis musicaux</p>
            </div>
        </Card>

        <Card Hoverable="true">
            <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-palette-fill text-3xl text-green-600"></i>
                </div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">Thèmes Visuels</h3>
                <p class="text-sm text-gray-600">Personnalisez l'apparence de votre partie</p>
            </div>
        </Card>
    </div>
</div>
