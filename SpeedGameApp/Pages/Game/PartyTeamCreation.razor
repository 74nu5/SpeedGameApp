@page "/party/{PartyId:guid}/team/new"
@inherits PartyPageBase
@using SpeedGameApp.Shared.DesignSystem.Components.Cards
@using SpeedGameApp.Shared.DesignSystem.Components.Buttons

<PageTitle>Speed Game App - Création d'équipe</PageTitle>

@* Hero Section *@
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-3b-blue/5 to-3b-yellow/5 p-4">
    <div class="w-full max-w-2xl">
        @* Party Info Banner *@
        <div class="text-center mb-8">
            <div class="inline-flex items-center px-4 py-2 bg-3b-blue/10 rounded-full mb-4">
                <i class="bi bi-controller text-3b-blue mr-2"></i>
                <span class="text-sm font-semibold text-3b-blue">@this.CurrentParty.Name</span>
            </div>
            <h1 class="text-5xl font-bold text-gray-900 mb-3">
                Rejoindre la partie
            </h1>
            <p class="text-xl text-gray-600">
                Créez votre équipe et commencez à jouer !
            </p>
        </div>

        @* Error Message *@
        @if (!string.IsNullOrEmpty(this.errorMessage))
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg shadow-md animate-shake" role="alert">
                <div class="flex items-start justify-between">
                    <div class="flex items-start">
                        <i class="bi bi-exclamation-triangle-fill text-2xl mr-3"></i>
                        <div>
                            <p class="font-bold">Erreur</p>
                            <p class="text-sm">@this.errorMessage</p>
                        </div>
                    </div>
                    <button type="button" @onclick="this.ClearError" class="text-red-700 hover:text-red-900 transition-colors">
                        <i class="bi bi-x-lg text-xl"></i>
                    </button>
                </div>
            </div>
        }

        @* Team Creation Card *@
        <Card Hoverable="true" AdditionalClasses="shadow-extra-large border-2 border-3b-blue/20">
            <HeaderContent>
                <div class="text-center py-2">
                    <h2 class="text-2xl font-bold text-gray-900 flex items-center justify-center">
                        <i class="bi bi-people-fill text-3b-yellow mr-3 text-3xl"></i>
                        Création de votre équipe
                    </h2>
                </div>
            </HeaderContent>

            <ChildContent>
                <div class="p-8">
                    <EditForm Model="this.teamName" OnValidSubmit="this.CreateTeamPartyAsync">
                        <div class="space-y-6">
                            @* Team Name Input *@
                            <div>
                                <label for="team-name" class="block text-sm font-bold text-gray-700 mb-3 flex items-center">
                                    <i class="bi bi-pencil-fill text-3b-blue mr-2"></i>
                                    Nom de votre équipe
                                </label>
                                <InputText
                                    id="team-name"
                                    class="w-full px-6 py-4 text-xl font-semibold border-2 border-gray-300 rounded-lg focus:border-3b-blue focus:ring-4 focus:ring-3b-blue-light outline-none transition-all placeholder:text-gray-400 placeholder:font-normal"
                                    placeholder="Ex: Les Champions, Team Rocket, Les Invincibles..."
                                    type="text"
                                    @bind-Value="this.teamName"
                                    autocomplete="off"/>
                            </div>

                            @* Info Box *@
                            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
                                <div class="flex items-start">
                                    <i class="bi bi-info-circle-fill text-blue-500 text-xl mr-3 mt-0.5"></i>
                                    <div>
                                        <p class="font-semibold text-blue-800 mb-1">Conseil</p>
                                        <p class="text-sm text-blue-700">
                                            Choisissez un nom d'équipe créatif et unique ! Il sera visible par tous les autres joueurs pendant la partie.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            @* Submit Button *@
                            <div class="pt-4">
                                <button
                                    type="submit"
                                    class="w-full px-8 py-5 bg-gradient-to-r from-3b-blue to-3b-blue-dark text-white rounded-lg hover:shadow-extra-large transition-all duration-300 font-bold text-xl flex items-center justify-center gap-3 hover:scale-105 transform">
                                    <i class="bi bi-play-circle-fill text-2xl"></i>
                                    Créer mon équipe et jouer
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </ChildContent>

            <FooterContent>
                <div class="bg-gray-50 px-8 py-4 text-center">
                    <p class="text-sm text-gray-600">
                        <i class="bi bi-lock-fill mr-1"></i>
                        Une fois votre équipe créée, vous accéderez directement à l'interface de jeu
                    </p>
                </div>
            </FooterContent>
        </Card>

        @* Additional Info *@
        <div class="mt-8 text-center">
            <p class="text-gray-500 text-sm">
                Besoin d'aide ? Contactez l'animateur de la partie
            </p>
        </div>
    </div>
</div>

<style>
    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        20%, 40%, 60%, 80% { transform: translateX(5px); }
    }

    .animate-shake {
        animation: shake 0.5s ease-in-out;
    }
</style>
