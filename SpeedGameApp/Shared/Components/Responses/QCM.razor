@if (this.Question == null)
{
    return;
}

<div class="bg-white rounded-lg shadow-large overflow-hidden border-2 border-3b-blue">
    <div class="bg-gradient-to-r from-3b-blue to-3b-blue-dark p-6">
        <h3 class="text-2xl font-bold text-white flex items-center">
            <i class="bi bi-list-check text-3b-yellow mr-3 text-3xl"></i>
            Question à Choix Multiple
        </h3>
        <div class="mt-4 p-4 bg-white/10 backdrop-blur-sm rounded-lg">
            <p class="text-xl text-white font-semibold">@(this.Question.Question)</p>
        </div>
    </div>
    <div class="p-6">
        <EditForm Model="this.response">
            <div class="space-y-3 mb-6">
                <InputRadioGroup TValue="string" @bind-Value="this.response">
                    <div class="relative">
                        <input type="radio" class="peer sr-only" id="option1" name="qcm-option" value="@(this.Question.Option1)" @onchange="@(() => this.response = this.Question.Option1)" />
                        <label for="option1" class="flex items-center p-4 bg-gray-50 border-2 border-gray-300 rounded-lg cursor-pointer transition-all hover:bg-gray-100 peer-checked:bg-3b-blue peer-checked:border-3b-blue peer-checked:text-white peer-checked:shadow-medium">
                            <span class="flex items-center justify-center w-6 h-6 mr-3 border-2 border-gray-400 rounded-full peer-checked:border-white">
                                <span class="hidden peer-checked:block w-3 h-3 bg-white rounded-full"></span>
                            </span>
                            <span class="font-semibold text-lg">A.</span>
                            <span class="ml-3 text-base">@(this.Question.Option1)</span>
                        </label>
                    </div>

                    <div class="relative">
                        <input type="radio" class="peer sr-only" id="option2" name="qcm-option" value="@(this.Question.Option2)" @onchange="@(() => this.response = this.Question.Option2)" />
                        <label for="option2" class="flex items-center p-4 bg-gray-50 border-2 border-gray-300 rounded-lg cursor-pointer transition-all hover:bg-gray-100 peer-checked:bg-3b-blue peer-checked:border-3b-blue peer-checked:text-white peer-checked:shadow-medium">
                            <span class="flex items-center justify-center w-6 h-6 mr-3 border-2 border-gray-400 rounded-full peer-checked:border-white">
                                <span class="hidden peer-checked:block w-3 h-3 bg-white rounded-full"></span>
                            </span>
                            <span class="font-semibold text-lg">B.</span>
                            <span class="ml-3 text-base">@(this.Question.Option2)</span>
                        </label>
                    </div>

                    <div class="relative">
                        <input type="radio" class="peer sr-only" id="option3" name="qcm-option" value="@(this.Question.Option3)" @onchange="@(() => this.response = this.Question.Option3)" />
                        <label for="option3" class="flex items-center p-4 bg-gray-50 border-2 border-gray-300 rounded-lg cursor-pointer transition-all hover:bg-gray-100 peer-checked:bg-3b-blue peer-checked:border-3b-blue peer-checked:text-white peer-checked:shadow-medium">
                            <span class="flex items-center justify-center w-6 h-6 mr-3 border-2 border-gray-400 rounded-full peer-checked:border-white">
                                <span class="hidden peer-checked:block w-3 h-3 bg-white rounded-full"></span>
                            </span>
                            <span class="font-semibold text-lg">C.</span>
                            <span class="ml-3 text-base">@(this.Question.Option3)</span>
                        </label>
                    </div>

                    <div class="relative">
                        <input type="radio" class="peer sr-only" id="option4" name="qcm-option" value="@(this.Question.Option4)" @onchange="@(() => this.response = this.Question.Option4)" />
                        <label for="option4" class="flex items-center p-4 bg-gray-50 border-2 border-gray-300 rounded-lg cursor-pointer transition-all hover:bg-gray-100 peer-checked:bg-3b-blue peer-checked:border-3b-blue peer-checked:text-white peer-checked:shadow-medium">
                            <span class="flex items-center justify-center w-6 h-6 mr-3 border-2 border-gray-400 rounded-full peer-checked:border-white">
                                <span class="hidden peer-checked:block w-3 h-3 bg-white rounded-full"></span>
                            </span>
                            <span class="font-semibold text-lg">D.</span>
                            <span class="ml-3 text-base">@(this.Question.Option4)</span>
                        </label>
                    </div>
                </InputRadioGroup>
            </div>

            <button
                class="w-full px-6 py-4 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:from-green-600 hover:to-green-700 transition-all font-bold text-lg shadow-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
                type="button"
                @onclick="this.CallbackQcmAsync"
                disabled="@(string.IsNullOrEmpty(this.response))">
                <i class="bi bi-check-circle-fill"></i>
                Valider ma réponse
            </button>
        </EditForm>
    </div>
</div>

